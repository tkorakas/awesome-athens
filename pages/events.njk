{% extends "pages/partials/html.njk" %}

{% block content %}
    <section class="timeline">
        {% for event in upcomingEvents %}

            <div class="timeline-item" id="{{event.id}}">
                <div class="timeline-img"></div>
                <div class="timeline-content hoverable">
                    <h4>
                        <a target="_blank"
                          href="{{ event.link }}">{{ event.name }}</a>
                    </h4>
                    <a target="_blank" href="https://meetup.com/{{ event.group.urlname }}">
                        <h6>{{ event.group.name }}</h6></a>
                    {% if event.venue %}
                        <a target="_blank"
                           href="https://www.google.com/maps/?q={{ event.venue.lat }},{{ event.venue.lon }}">
                            <i class="material-icons tiny timeline-icon">place</i><span>{{ event.venue.name }}</span>
                        </a>
                    {% endif %}
                    <div class="date">{{ event.local_date }} {{ event.local_time }}</div>
                    <div class="timeline-content-wrapper">{{ event.description|safe }}</div>
                </div>
            </div>
        {% endfor %}
    </section>

{% endblock %}